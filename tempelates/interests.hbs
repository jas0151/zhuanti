    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize selected interests
            let selectedInterests = {
                hobbies: [],
                classes: [],
                clubs: [],
                languages: []
            };

            // Theme toggle
            const themeToggle = document.getElementById('themeToggle');
            themeToggle.addEventListener('click', function() {
                document.body.classList.toggle('dark-mode');
                if (document.body.classList.contains('dark-mode')) {
                    themeToggle.innerHTML = '<i class=\'bx bx-sun\'></i>';
                } else {
                    themeToggle.innerHTML = '<i class=\'bx bx-moon\'></i>';
                }
            });

            // Tab switching
            const tabButtons = document.querySelectorAll('.tab-button');
            const tabContents = document.querySelectorAll('.tab-content');

            tabButtons.forEach(button => {
                button.addEventListener('click', function() {
                    // Remove active class from all buttons
                    tabButtons.forEach(btn => btn.classList.remove('active'));
                    // Add active class to current button
                    this.classList.add('active');
                    // Hide all tab contents
                    tabContents.forEach(content => content.classList.remove('active'));
                    // Show current tab content
                    document.getElementById(this.dataset.tab + 'Tab').classList.add('active');
                });
            });

            // Search functionality
            const searchInput = document.getElementById('searchInput');
            const categoryFilter = document.getElementById('categoryFilter');

            function filterInterests() {
                const searchTerm = searchInput.value.toLowerCase();
                const category = categoryFilter.value;

                document.querySelectorAll('.interest-card').forEach(card => {
                    const cardText = card.textContent.toLowerCase();
                    const cardCategory = card.parentElement.id;
                    
                    const matchesSearch = cardText.includes(searchTerm);
                    const matchesCategory = category === 'all' || category === cardCategory;
                    
                    card.style.display = matchesSearch && matchesCategory ? 'flex' : 'none';
                });
            }

            searchInput.addEventListener('input', filterInterests);
            categoryFilter.addEventListener('change', filterInterests);

            // Popular tags
            document.querySelectorAll('.tag').forEach(tag => {
                tag.addEventListener('click', function() {
                    const category = this.dataset.category;
                    const value = this.dataset.value;
                    
                    // Switch to the appropriate tab
                    document.querySelector(`.tab-button[data-tab="${category}"]`).click();
                    
                    // Select the interest if it exists
                    const interestCard = document.querySelector(`#${category} .interest-card[data-value="${value}"]`);
                    if (interestCard && !interestCard.classList.contains('selected')) {
                        interestCard.click();
                    }
                });
            });

            // Interest selection
            document.querySelectorAll('.interest-card').forEach(card => {
                card.addEventListener('click', function() {
                    const category = this.parentElement.id;
                    const value = this.dataset.value;
                    
                    this.classList.toggle('selected');
                    
                    if (this.classList.contains('selected')) {
                        // Add to selected interests
                        if (!selectedInterests[category].includes(value)) {
                            selectedInterests[category].push(value);
                        }
                    } else {
                        // Remove from selected interests
                        selectedInterests[category] = selectedInterests[category].filter(item => item !== value);
                    }
                    
                    updateSelectedDisplay();
                    updateProgress();
                    updateHiddenInputs();
                });
            });

            // No custom interest functionality needed

            // Update selected display
            function updateSelectedDisplay() {
                const container = document.getElementById('selectedInterests');
                const totalInterests = Object.values(selectedInterests).reduce((sum, arr) => sum + arr.length, 0);
                
                if (totalInterests === 0) {
                    container.innerHTML = '<div class="no-selections">No interests selected yet. Choose some interests above!</div>';
                    return;
                }
                
                let html = '';
                
                Object.keys(selectedInterests).forEach(category => {
                    if (selectedInterests[category].length > 0) {
                        let categoryName;
                        let categoryIcon;
                        
                        switch(category) {
                            case 'hobbies':
                                categoryName = 'Hobbies & Interests';
                                categoryIcon = 'bx-joystick';
                                break;
                            case 'classes':
                                categoryName = 'Classes';
                                categoryIcon = 'bx-book-open';
                                break;
                            case 'clubs':
                                categoryName = 'Clubs';
                                categoryIcon = 'bx-group';
                                break;
                            case 'languages':
                                categoryName = 'Languages';
                                categoryIcon = 'bx-globe';
                                break;
                        }
                        
                        html += `
                            <div class="category-group">
                                <div class="category-label"><i class='bx ${categoryIcon}'></i> ${categoryName}</div>
                                <div class="selected-tags">
                        `;
                        
                        selectedInterests[category].forEach(interest => {
                            // Get display name
                            let displayName = interest;
                            const card = document.querySelector(`#${category} .interest-card[data-value="${interest}"]`);
                            if (card) {
                                displayName = card.querySelector('.interest-name').textContent;
                            } else {
                                // Format camelCase to Title Case
                                displayName = interest
                                    .replace(/([A-Z])/g, ' $1')
                                    .replace(/^./, str => str.toUpperCase());
                            }
                            
                            html += `
                                <div class="selected-tag" data-category="${category}" data-value="${interest}">
                                    ${displayName}
                                    <button class="remove-tag" title="Remove ${displayName}">
                                        <i class='bx bx-x'></i>
                                    </button>
                                </div>
                            `;
                        });
                        
                        html += `
                                </div>
                            </div>
                        `;
                    }
                });
                
                container.innerHTML = html;
                
                // Add remove tag event listeners
                document.querySelectorAll('.remove-tag').forEach(button => {
                    button.addEventListener('click', function() {
                        const tag = this.closest('.selected-tag');
                        const category = tag.dataset.category;
                        const value = tag.dataset.value;
                        
                        // Remove from selected interests
                        selectedInterests[category] = selectedInterests[category].filter(item => item !== value);
                        
                        // Deselect the card if it exists
                        const card = document.querySelector(`#${category} .interest-card[data-value="${value}"]`);
                        if (card) {
                            card.classList.remove('selected');
                        }
                        
                        updateSelectedDisplay();
                        updateProgress();
                        updateHiddenInputs();
                    });
                });
            }

            // Update progress bar
            function updateProgress() {
                const totalInterests = Object.values(selectedInterests).reduce((sum, arr) => sum + arr.length, 0);
                document.getElementById('selectedCount').textContent = totalInterests;
                
                // Update progress bar (max 100%)
                const percentage = Math.min(totalInterests * 5, 100);
                document.getElementById('progressFill').style.width = `${percentage}%`;
                
                // Update color based on progress
                const progressFill = document.getElementById('progressFill');
                if (percentage < 30) {
                    progressFill.style.background = 'var(--warning)';
                } else if (percentage < 70) {
                    progressFill.style.background = 'var(--gradient)';
                } else {
                    progressFill.style.background = 'var(--success)';
                }
            }

            // Update hidden inputs
            function updateHiddenInputs() {
                document.getElementById('hobbiesInput').value = selectedInterests.hobbies.join(',');
                document.getElementById('classesInput').value = selectedInterests.classes.join(',');
                document.getElementById('clubsInput').value = selectedInterests.clubs.join(',');
                document.getElementById('languagesInput').value = selectedInterests.languages.join(',');
            }

            // Load existing interests if they exist
            {{#if user.profile.interests}}
                // Hobbies
                {{#each user.profile.interests.hobbies}}
                selectedInterests.hobbies.push("{{this}}");
                {{/each}}

                // Classes
                {{#each user.profile.interests.classes}}
                selectedInterests.classes.push("{{this}}");
                {{/each}}

                // Clubs
                {{#each user.profile.interests.clubs}}
                selectedInterests.clubs.push("{{this}}");
                {{/each}}

                // Languages
                {{#each user.profile.interests.languages}}
                selectedInterests.languages.push("{{this}}");
                {{/each}}

                // Pre-select all existing interests visually
                Object.keys(selectedInterests).forEach(category => {
                    selectedInterests[category].forEach(interest => {
                        const card = document.querySelector(`#${category} .interest-card[data-value="${interest}"]`);
                        if (card) {
                            card.classList.add('selected');
                        }
                    });
                });

                updateSelectedDisplay();
                updateProgress();
                updateHiddenInputs();
            {{/if}}

            // No custom interest function needed
        });
